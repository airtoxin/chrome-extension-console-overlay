{
  "manifest_version": 2,
  "version": "1.0.0",
  "short_name": "ConsoleOverlay",
  "name": "Console Overlay",
  "description": "Show overlay of console output in page",
  "browser_action": {
    "default_title": "ConsoleOverlay",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scriptInjector.bundle.js"]
    }
  ],
  "devtools_page": "devtools.html",
  "icons": {
    "16": "img/iconfinder-16.png",
    "48": "img/iconfinder-48.png",
    "128": "img/iconfinder-128.png"
  },
  "permissions": ["tabs","activeTab", "storage"],
  "web_accessible_resources": [
    "contentScript.bundle.js"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
